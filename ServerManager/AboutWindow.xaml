<Window x:Class="ServerManager.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="About" Height="520" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="ServerNetwork" Width="80" Height="80" 
                                         Foreground="#2196F3" HorizontalAlignment="Center"/>
                <TextBlock Text="ASP.NET Server Manager" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" Background="#E5E4E2" Padding="15" CornerRadius="8" Margin="0,0,0,20">
                <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20">
                    A lightweight Windows application to manage and run multiple ASP.NET development servers. 
                    Run, stop, and monitor your local web servers with ease.
                </TextBlock>
            </Border>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Created by" FontSize="14" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="DitDev" FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#2196F3"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Connect with me:" FontSize="14" FontWeight="SemiBold" 
                           Margin="0,0,0,12" HorizontalAlignment="Center"/>

                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Click="OpenPortfolio" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="80" Height="80" Margin="10"
                            ToolTip="Portfolio - ditdev.vercel.app"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            Background="#F86828" BorderThickness="0">
                        <fa:IconBlock Icon="Globe" FontSize="32" Foreground="White"/>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="1" Click="OpenGitHub" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="80" Height="80" Margin="10"
                            ToolTip="GitHub - github.com/rillToMe"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            Background="#92C400" BorderThickness="0">
                        <fa:IconBlock Icon="Github" FontSize="32" Foreground="White"/>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="0" Click="OpenInstagram" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="80" Height="80" Margin="10"
                            ToolTip="Instagram - @rill_lyrics"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            Background="#00B5F1" BorderThickness="0">
                        <fa:IconBlock Icon="Instagram" FontSize="32" Foreground="White"/>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="1" Click="OpenTikTok" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="80" Height="80" Margin="10"
                            ToolTip="TikTok - @goodvibes_music28"
                            materialDesign:ButtonAssist.CornerRadius="12"
                            Background="#FFC400" BorderThickness="0">
                        <fa:IconBlock Icon="Tiktok" FontSize="32" Foreground="White"/>
                    </Button>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,15">

                <Button Click="ToggleLicense"
            Style="{StaticResource MaterialDesignOutlinedButton}"
            materialDesign:ButtonAssist.CornerRadius="8"
            Padding="16,6"
            HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocumentOutline"
                                     Width="18" Height="18"
                                     Margin="0,0,6,0"/>
                        <TextBlock Text="View License"/>
                    </StackPanel>
                </Button>

                <Border x:Name="LicenseContainer"
            Margin="0,12,0,0"
            Background="#E5E4E2"
            CornerRadius="10"
            Padding="15"
            Visibility="Collapsed"
            Opacity="0"
            RenderTransformOrigin="0.5,0">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleY="0.9"/>
                    </Border.RenderTransform>

                    <ScrollViewer MaxHeight="180">
                        <TextBlock x:Name="LicenseText"
                       FontSize="12"
                       LineHeight="18"
                       TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>


            <Border Grid.Row="5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                    Padding="0,15,0,0">
                <TextBlock x:Name="CopyrightText" FontSize="12" Foreground="Gray" 
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>