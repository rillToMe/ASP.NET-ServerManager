<Window x:Class="ServerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="ASP.NET Server Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Projects" FontSize="20" FontWeight="Bold" 
                       Margin="15,15,15,10"/>

            <ListBox x:Name="ServerListBox" Grid.Row="1" Margin="10"
                     SelectionChanged="ServerListBox_SelectionChanged"
                     Background="White" BorderThickness="1" BorderBrush="#DDDDDD">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Path}" FontSize="10" Foreground="Gray" 
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock FontSize="10" Margin="0,2,0,0">
                                    <Run Text="Status: "/>
                                    <Run Text="{Binding Status}" FontWeight="Bold">
                                        <Run.Style>
                                            <Style TargetType="Run">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Run.Style>
                                    </Run>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button x:Name="AddServerBtn" Grid.Row="2" 
                    Margin="10" Padding="10" FontSize="14" FontWeight="Bold"
                    Click="AddServerBtn_Click" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Background="#4CAF50" 
                    Foreground="White" BorderThickness="0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Add New Project" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Project Details" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button x:Name="SettingsBtn" HorizontalAlignment="Right" 
                        Click="SettingsBtn_Click" Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Settings" Width="40" Height="40">
                    <materialDesign:PackIcon Kind="Cog" Width="24" Height="24"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" x:Name="DetailsPanel" Visibility="Collapsed">

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" 
                               VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <TextBox x:Name="ProjectNameBox" Grid.Row="0" Grid.Column="1" 
                             Padding="8" FontSize="14" Margin="0,0,10,0"
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="SaveNameBtn" Grid.Row="0" Grid.Column="2" 
                            Padding="10,8" Click="SaveNameBtn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#2196F3" Foreground="White" BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Save Name" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="Path:" Grid.Row="1" Grid.Column="0" 
                               VerticalAlignment="Center" Margin="0,10,10,0" FontWeight="Bold"/>
                    <TextBox x:Name="ProjectPathBox" Grid.Row="1" Grid.Column="1" 
                             Padding="8" FontSize="12" Margin="0,10,10,0" 
                             IsReadOnly="True" Background="#F0F0F0"
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="EditPathBtn" Grid.Row="1" Grid.Column="2" 
                            Padding="10,8" Click="EditPathBtn_Click" Margin="0,10,0,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#FF9800" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderEdit" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Edit Path" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button x:Name="RunBtn" Padding="15,8" 
                            FontSize="14" FontWeight="Bold" Click="RunBtn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" 
                            Margin="0,0,10,0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Play" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Run Server" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="StopBtn" Padding="15,8" 
                            FontSize="14" FontWeight="Bold" Click="StopBtn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#F44336" Foreground="White" BorderThickness="0"
                            IsEnabled="False" Cursor="Hand" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Stop Server" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="VisitWebBtn" Padding="15,8" 
                            FontSize="14" FontWeight="Bold" Click="VisitWebBtn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#2196F3" Foreground="White" BorderThickness="0"
                            IsEnabled="False" Cursor="Hand" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Web" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Visit Web" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteBtn" Padding="15,8" 
                            FontSize="14" FontWeight="Bold" Click="DeleteBtn_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Background="#9E9E9E" Foreground="White" BorderThickness="0"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Delete Project" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" x:Name="EmptyState" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="No project selected" FontSize="16" 
                           Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="Select or add a project to get started" 
                           FontSize="12" Foreground="Gray" Margin="0,5,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1" 
                    Background="Black" Margin="0,10,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="#333333">
                        <TextBlock Text="Console Output" Foreground="White" 
                                   Padding="10,5" FontWeight="Bold"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogsBox" Background="Black" Foreground="#00FF00" 
                                 FontFamily="Consolas" FontSize="12" IsReadOnly="True" 
                                 BorderThickness="0" Padding="10" TextWrapping="Wrap"
                                 VerticalAlignment="Top" AcceptsReturn="True"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>